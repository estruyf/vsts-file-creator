{
  "manifestVersion": 1,
  "id": "build-task",
  "name": "File Creator",
  "version": "5.0.0",
  "publisher": "eliostruyf",
  "public": true,
  "tags": [
    "File",
    "Create",
    "Extension",
    "Build",
    "Release"
  ],
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],    
  "description": "This extension allows you to create a new file during your build or release pipeline.",
  "categories": [
    "Build and release"
  ],
  "icons": {
    "default": "images/extension-icon.png"        
  },
  "files": [
    {
      "path": "buildtask"
    }
  ],
  "contributions": [
    {
      "id": "custom-build-task",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "buildtask"
      }
    }
  ],
  "content":{
    "details":{
      "path": "README.md"
    }
  },
  "screenshots":[
    {
      "path": "images/file-creator-options.png"
    }
  ],
  "links": {
    "repository": {
      "uri": "https://github.com/estruyf/vsts-file-creator"
    },
    "issues": {
      "uri": "https://github.com/estruyf/vsts-file-creator/issues"
    },
    "support": {
      "uri": "https://github.com/estruyf/vsts-file-creator"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/estruyf/vsts-file-creator"
  }
}